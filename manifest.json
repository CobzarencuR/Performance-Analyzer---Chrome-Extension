{
    "manifest_version": 3,
    "name": "Website Performance Analyzer",
    "version": "1.0",
    "description": "Analyzes the performance of websites.",
    "action": {
        "default_popup": "popup.html",
        "default_icon": "icon.png"
    },
    "permissions": [
        "activeTab",
        "tabs",
        "scripting",
        "storage",
        "system.cpu",
        "system.memory",
        "declarativeNetRequest",
        "declarativeNetRequestWithHostAccess"
    ]
}